.signup-container
  .signup-message
    Join the HiveMind
    %br
    %span
      Access all the buzz with a free account
  %form.signup-form.flex-container{action: "/beekeepers", method: "post" }
    %input#username{ placeholder: "Username", name: "beekeeper[username]", type: "text"}
    %input#email{ placeholder: "Email", name: "beekeeper[email]", type: "email"}
    %input#password{ placeholder: "Password", name: "beekeeper[password]", type: "password"}
    .custom-signup-select
      %select#experience{ name: "beekeeper[experience]"}
        %option{ select: "selected", value: "" }
          Experience level
        %option{ value: "novice"}
          Novice
        %option{ value: "apprentice"}
          Apprentice
        %option{ value: "journeyman"}
          Journeyman
        %option{ value: "master"}
          Master
    %input#city{ placeholder: "City", name: "beekeeper[city]", type: "text"}
    %input.signup-button{ type: "submit", value: "Signup"}
