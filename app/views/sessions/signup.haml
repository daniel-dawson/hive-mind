.signup-form-container
  %form.signup-form{action: "/beekeepers", method: "post" }
    %input#username{ placeholder: "Username", type: "text"}
    %input#email{ placeholder: "Email", type: "text"}
    %input#password{ placeholder: "Password", type: "text"}
    %select#experience{ name: "experience"}
      %option{ select: "selected", value: "" }
        Experience level
      %option{ value: "novice"}
        Novice
      %option{ value: "apprentice"}
        Apprentice
      %option{ value: "journeyman"}
        Journeyman
      %option{ value: "master"}
        Master
    %input#city{ placeholder: "City", type: "text"}
